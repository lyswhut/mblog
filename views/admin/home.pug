extends layout.pug
block body
  header.header.navbar.navbar-default
    .container-fluid
      .navbar-header
        a.navbar-brand(href="http://"+serverDomain) 一个人的角落
  .main.container-fluid
    .row
      .col-md-2.main_leftCt
        h1 Hi, #[strong admin],welcome to the Admin home!
        a(href="/logout") 退出登录
          .panel-group#accordion(role="tablist" aria-multiselectable="true")
            .panel.panel-default
              .panel-heading(role="tab" id="headingOne")
                h4.panel-title
                  a(role="button" href="#collapseOne") 运行信息
              .panel-heading(role="tab" id="headingOne")
                h4.panel-title
                  a(role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne") 文章管理
              #collapseOne.panel-collapse.collapse.in(role="tabpanel" aria-labelledby="headingOne")
                ul.list-group
                  li.list-group-item
                    a.list-group-item(href="/addBlog") 添加文章
                  li.list-group-item
                    a.list-group-item(href="/editBlog") 编辑文章
              .panel-heading(role="tab" id="headingTwo")
                h4.panel-title
                  a(role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo") 评论管理
              #collapseTwo.panel-collapse.collapse.in(role="tabpanel" aria-labelledby="headingTwo")
                ul.list-group
                  li.list-group-item
                    a.list-group-item(href="/addBlog") 添加文章
                  li.list-group-item
                    a.list-group-item(href="/editBlog") 编辑文章

      .col-md-10.main_rightCt



